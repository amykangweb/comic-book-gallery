@model ComicBookGallery.Models.ComicBook[]
@{
    ViewBag.Title = "Comic Books";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    @foreach (var comic in Model)
    {
        <div class="col-md-3">
            <h4>@comic.DisplayText</h4>
            <img src="@comic.CoverImageFile"
                    alt="The Amazing Spider-Man #700"
                    class="img-responsive" />
        </div>
    }
</div>